{
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:electron-dev\"",
    "electron-dev": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && tsc && electron-builder"
  },
  "build": {
    "appId": "com.example.vanillaelectron",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}