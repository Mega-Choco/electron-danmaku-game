{
  "name": "STG",
  "version": "0.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:electron-dev\"",
    "electron-dev": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && tsc && electron-builder"
  },
  "build": {
    "appId": "com.example.vanillaelectron",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2"
  }
}
